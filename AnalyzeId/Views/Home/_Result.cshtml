@model FinalResultOCRDTO
@{
    Layout = null;
}




<form id="myform" asp-action="ConfirmResult" method="post">
    <input type="hidden" asp-for="FrontUrl" />
    <input type="hidden" asp-for="ImageFrontId" />
    <input type="hidden" asp-for="BackUrl" />
    <input type="hidden" asp-for="ImageBackId" />
    <input type="hidden" asp-for="FaceUrl" />
    <input type="hidden" asp-for="ImageFaseId" />
    <input type="hidden" asp-for="SignatureUrl" />
    <input type="hidden" asp-for="ImageSignatureId" />
    <input type="hidden" asp-for="TransactionId" />
    <input type="hidden" asp-for="JsonResultIDv" />
    <input type="hidden" asp-for="ApplicationId" />
    <input type="hidden" asp-for="Email" />
    <input type="hidden" asp-for="PhoneNumber" />

    <div class="row">
        <div class="col-sm-6 mt-1">
            <label class="font-weight-bold text-black"> First Name</label>
            <input type="text" asp-for="FirstName" class="form-control text-black" />
        </div>
        @*<div class="col-6 mt-1">
            <label class="font-weight-bold text-black">Middle Name:</label>
            <input type="text" asp-for="MiddleName" class="form-control text-black" />
            </div>*@
        <div class="col-sm-6 mt-1">
            <label class="font-weight-bold text-black">Last Name</label>
            <input type="text" asp-for="LastName" class="form-control text-black" />
        </div>
        <div class="col-sm-6 mt-1">
            <label class="font-weight-bold text-black">Full Name</label>
            <input type="text" asp-for="FullName" class="form-control text-black" />
        </div>
        <div class="col-sm-6 mt-1">
            <label class="font-weight-bold text-black">Document Number</label>
            <input type="text" asp-for="DocumentNumber" class="form-control text-black" />
        </div>
        <div class="col-sm-6 mt-1">
            <label class="font-weight-bold text-black">BirthDate</label>
            <div class="position-relative">
                <input type="text" asp-for="BirthDate" class="form-control text-black" id="BirthDate"
                       data-ha-datetimepicker="#BirthDate"
                       data-ha-dp-resultformat="{year}/{month}/{day}" data-ha-dp-disabletime="true" />
                <img src="~/image/calendar.svg" data-feather="calendar" class="position-absolute text-nissan" style="right:10px;top:14px" />
            </div>
        </div>
        <div class="col-sm-6 mt-1">
            <label class="font-weight-bold text-black">Expiry Date</label> <div class="position-relative">
                <input type="text" asp-for="ExpiryDate" class="form-control text-black" id="ExpiryDate"
                       data-ha-datetimepicker="#ExpiryDate"
                       data-ha-dp-resultformat="{year}/{month}/{day}" data-ha-dp-disabletime="true" />
                <img src="~/image/calendar.svg" data-feather="calendar" class="position-absolute text-nissan" style="right:10px;top:14px" />
            </div>
        </div>
        <div class="col-sm-6 mt-1">
            <label class="font-weight-bold text-black">Address</label>
            <input type="text" asp-for="Address" class="form-control text-black" />
        </div>
        @*<div class="col-12">
            <button type="submit" class="btn mt-2 text-light  bg-site btn-sm">Save</button>
            </div>*@
        <div class="col-12 text-center mt-2">
            <button type="submit" @*onclick="CreateNewElements()"*@ class="btn-sm-block   mb-1 n-btn n-btn-red submit-form-btn  " style="min-width:150px">
                Confirm
            </button>
            <a asp-action="Index" asp-controller="Home" class="btn-sm-block   n-btn n-btn-gray" style="min-width:150px">
                Return to home
            </a>

        </div>
    </div>
</form>