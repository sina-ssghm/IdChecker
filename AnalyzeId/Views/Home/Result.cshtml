                <div class="card bg-danger text-white">
                    <div class="card-body">
                        @*<h4 class="card-title text-white">Danger card title</h4>*@
                        <p class="card-text">
                            @Model.Message
                        </p>
                    </div>
                </div>

            }
            <div class="card-data">
                @if (shouldRequestData)
                {
                    <div class="text-center mb-2 ">

                        <img src="/Image/Spinner.svg" style="max-width:100px" />
